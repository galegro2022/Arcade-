    <main>

 <body class="p-3 mb-2 bg-dark text-white">

{{!-- Welcome by name --}}

<div>
    {{#each users}}
  <h1 class="display-3 text-danger fw-bold"> Welcome {{name}}</h1>
    {{/each}}
  </div>

<div class="text-center">
  <div>
  <h2 class="display-2 text-danger fw-bold">Search for a Game</h2>
  </div>
</div>

<div>
	<div class="input-group card p-3 mb-2 bg-dark text-white">
  <input id="search-bar" type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
  <button id="search-button" type="submit" class="btn btn-outline-danger">search</button>
</div>
</div>

<div id="search-results"></div>

<h2 class="display-2 text-danger fw-bold">Your games</h2>
   <!--title -->

         <!--saved games box -->

        <div class="row" id="saved-games-container">
	    {{#each games}}
            {{#if this.saved-games}}
		    
	
		<div class="col-lg-2 col-md-3 col-sm-6 col-xs-12" id="game-box">
        	<div class="box gallery">
				<div class="card">
    				<img class="img-responsive" id="saved-games" src={{this.game_image}}>
    				<a onClick="modalDisplay({{@index}})" href="#" class="overlay link" id="trigger-modal{{@index}}"></a>
						<div class="info">
      		        		<div class="foot">
								<p class="game-title">{{this.game_name}}</p>
                                </div>
     		    		</div>
     	    	</div>
        	</div>
		</div>

        </div>

        {{/if}}
        {{/each}}

        </div>

        <!-- game details modal -->
        <div id="myModal{{@index}}" class="modal">

  		<!-- Modal content -->
  		<div class="modal-content">
   
    		<div class="row" id="modal-body">
      			<!--cover image -->
					<div class="col-5" id="search-game">
						<img id="selected-game-cover" src={{this.gameImage}}>
					</div>

					<div class="col-7" id="game-scroll">
						<!--close BTN -->
						<span id='closeit{{@index}}' class="close">&times;</span>
						
						<div class="container" id="modal-game-info-box">
							<!--Game Title -->
							<h2 class="game-title" id="modal-game-title">{{this.gameName}}</h2>
							<!--Year & Genre -->
							<div class="row" id="YRG-box">
								<div class="col-2" id="release-date"><h5>{{this.gameReleaseDate}}</h5></div>
								<div class="col-6" id="rating"><h5>{{this.gameRating}}</h5></div>
							</div>
							<!--Description -->
							<div class="row">
								<div class="col-10" id="plot">	
									<p><strong>Platforms: </strong>{{this.gamePlatforms}}</p>
								</div>
							</div>
							<!--saved game BTN -->
							<div class="row">
								<div class="col-md-3">
								<form action="/api/new/saved/{{this.id}}?_method=PUT" method="POST">
									<input type="hidden" name="saved" value="true">
									<button type="submit"><img id="saved-game-button" src=""></button>
								</form>
								</div>

    </main>

<footer class="footer">
	<div class="footer_text-box"> 
